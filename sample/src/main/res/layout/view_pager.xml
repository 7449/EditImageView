<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill">

    <RelativeLayout
        android:id="@+id/footer"
        style="@style/footer">

        <ImageView
            android:id="@+id/previous"
            style="@style/previousButton"
            android:contentDescription="@string/button.previous" />

        <ImageView
            android:id="@+id/next"
            style="@style/nextButton"
            android:contentDescription="@string/button.next" />

        <TextView
            android:id="@+id/note"
            style="@style/footerNote"
            android:layout_toStartOf="@id/next"
            android:layout_toEndOf="@id/previous" />

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/horizontal_pager"
        style="@style/mainPanel"
        android:visibility="gone" />

    <com.davemorrissey.labs.subscaleview.test.viewpager.VerticalViewPager
        android:id="@+id/vertical_pager"
        style="@style/mainPanel"
        android:visibility="gone" />

</RelativeLayout>
